<h1>Listing transfers</h1>

<table>
  <tr>
    <th>Amount</th>
    <th>Currency</th>
    <th>Uniquekey</th>
    <th>Status</th>
    <th>Sender</th>
    <th>Receiver</th>
    <th></th>
    <th></th>
    <th></th>
  </tr>

<% @transfers.each do |transfer| %>
  <tr>
    <td><%= transfer.amount %></td>
    <td><%= transfer.currency %></td>
    <td><%= transfer.uniqueKey %></td>
    <td><%= transfer.status %></td>
    <td><%= transfer.sender %></td>
    <td><%= transfer.receiver %></td>
    <td><%= link_to 'Show', transfer %></td>
    <td><%= link_to 'Edit', edit_transfer_path(transfer) %></td>
    <td><%= link_to 'Destroy', transfer, method: :delete, data: { confirm: 'Are you sure?' } %></td>
  </tr>
<% end %>
</table>

