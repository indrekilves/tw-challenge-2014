<%= form_for @transfer, :html => { :class => 'form-horizontal' } do |f| %>
  <div class="control-group">
    <%= f.label :amount, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :amount, :class => 'text_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :currency, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :currency, :class => 'text_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :uniqueKey, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :uniqueKey, :class => 'text_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :status, :class => 'control-label' %>
    <div class="controls">
      <%= f.text_field :status, :class => 'text_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :sender_id, :class => 'control-label' %>
    <div class="controls">
      <%= f.number_field :sender_id, :class => 'number_field' %>
    </div>
  </div>
  <div class="control-group">
    <%= f.label :receiver_id, :class => 'control-label' %>
    <div class="controls">
      <%= f.number_field :receiver_id, :class => 'number_field' %>
    </div>
  </div>

  <div class="form-actions">
    <%= f.submit nil, :class => 'btn btn-primary' %>
    <%= link_to t('.cancel', :default => t("helpers.links.cancel")),
                transfers_path, :class => 'btn' %>
  </div>
<% end %>
